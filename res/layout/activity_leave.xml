<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/leaveDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/leaveName"
        android:layout_below="@+id/leaveName"
        android:ems="10"
        android:inputType="date"
        android:text="MM/DD/YYYY" />

    <Button
        android:id="@+id/leaveSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/leaveType"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="56dp"
        android:onClick="submitLeave"
        android:text="Submit" />

    <Button
        android:id="@+id/leaveCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/leaveSubmit"
        android:layout_alignBottom="@+id/leaveSubmit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="56dp"
        android:onClick="cancelView"
        android:text="Home" />

    <Spinner
        android:id="@+id/leaveType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/leaveDate"
        android:layout_alignRight="@+id/leaveDate"
        android:layout_below="@+id/leaveDate"
        android:entries="@array/leave_arrays"
        android:prompt="@string/leave_prompt" />

    <EditText
        android:id="@+id/leaveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="text|textPersonName"
        android:text="Input Here" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/leaveType"
        android:text="Type:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/leaveDate"
        android:layout_alignBottom="@+id/leaveDate"
        android:layout_alignLeft="@+id/textView1"
        android:text="Date:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/leaveName"
        android:layout_alignBottom="@+id/leaveName"
        android:layout_alignParentLeft="true"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>